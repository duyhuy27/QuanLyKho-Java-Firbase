<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_14sdp">

        <TextView
            android:id="@+id/tv_chonTenNCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/imgButton_luaChon"
            android:text="Nhà phân phối đai việt"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgButton_luaChon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_handle" />


        <TextView
            android:id="@+id/tv_chonSdtNCC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chonTenNCC"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@id/imgButton_luaChon"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="0123456789"
            app:drawableStartCompat="@drawable/icon_dienthoai" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>