<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wave_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/custome_listview"
            android:orientation="vertical"
            android:backgroundTint="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_quay_lai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_14sdp"
                    android:background="@drawable/background_edit_text"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_quay_lai" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Chi tiết loại sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <TextView
                    android:id="@+id/idlsp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID loại sản phẩm :"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_chitietloaisp_idloaisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4444"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/idlsp1"/>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/idlsp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên loại sản phẩm :"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_below="@+id/tv_chitietloaisp_idloaisp"/>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tv_chitietloaisp_tenloaisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4444"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_below="@+id/tv_chitietloaisp_idloaisp"
                    android:layout_toRightOf="@+id/idlsp2"/>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/idlsp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái :"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="#28B446"
                    android:layout_below="@+id/tv_chitietloaisp_tenloaisp"/>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tv_chitietloaisp_trangthailoaisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="còn hoạt động"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="#28B446"
                    android:layout_below="@+id/tv_chitietloaisp_tenloaisp"
                    android:layout_toRightOf="@+id/idlsp3"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_chitietloaisp_quaylai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:background="@drawable/background_button"
                android:text="Quay lại"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>