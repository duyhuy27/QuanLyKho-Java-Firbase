<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/view_nen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/wave_background"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        app:cardBackgroundColor="@color/background_color"
        android:layout_marginHorizontal="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/button_troLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_trolai"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    />

                <TextView
                    android:id="@+id/tv_suaNhaCungCap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sửa nhà cung cấp"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:padding="@dimen/_14sdp"
                    android:gravity="center"
                    />

            </RelativeLayout>
            <EditText
                android:id="@+id/ed_tenNCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên nhà cung cấp"
                android:background="@drawable/background_edit_text"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/ed_diaChiNCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ"
                android:background="@drawable/background_edit_text"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/ed_soDienThoaiNCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:background="@drawable/background_edit_text"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/ed_emailNCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/background_edit_text"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái hoạt động"
                    android:textSize="@dimen/_14sdp"/>

                <Switch
                    android:id="@+id/swButton_trangThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_hoanTat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:background="@drawable/background_button"
                android:text="Hoàn tất"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>













    </androidx.cardview.widget.CardView>

</RelativeLayout>