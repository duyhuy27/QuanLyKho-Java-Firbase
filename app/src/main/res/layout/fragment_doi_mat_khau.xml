<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.DoiMatKhauFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"

        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/background_edit_text"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordNewTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"

        app:counterEnabled="true"
        app:counterMaxLength="20"

        app:helperText="Nhập mật khẩu mới"
        app:helperTextEnabled="true"

        app:helperTextTextColor="#FB8C00"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_passwordNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/background_edit_text"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordNewTil_CF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"

        app:counterEnabled="true"
        app:counterMaxLength="20"

        app:helperText="Nhập lại mật khẩu mới"
        app:helperTextEnabled="true"

        app:helperTextTextColor="#FB8C00"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_passwordNew_CF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/background_edit_text"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu ý"
        android:textSize="@dimen/_17sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:drawableStart="@drawable/baseline_report_gmailerrorred_24"
        android:drawablePadding="@dimen/_10sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_chat"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:textAlignment="viewStart"
        android:textDirection="ltr"
        android:letterSpacing="0.05"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="- Có độ dài ít nhất 6 ký tự \n- Chứa ít nhất 01 kí tự số, 01 kí tự chữ và 01 ký tự đặc biệt \n- Không được trùng với 4 mật khẩu gần nhất"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonHoanTat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@drawable/background_button"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Hoàn tất"
        android:textColor="@color/white"/>

</LinearLayout>