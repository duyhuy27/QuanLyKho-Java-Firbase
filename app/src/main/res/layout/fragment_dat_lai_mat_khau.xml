<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:id="@+id/datlaimatkhauTK"
    tools:context=".fragments.DatLaiMatKhauFragment">
    <RelativeLayout
        android:background="@drawable/wave_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/custome_listview"
            android:backgroundTint="@color/white">
            <TextView

                android:id="@+id/a1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Đặt Lại Mật Khẩu"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/imgbt_datlaimatkhau_back"
                android:background="@drawable/custome_listview"
                android:backgroundTint="#F5F5F5"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/icon_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <RelativeLayout
                android:id="@+id/a2"
                android:layout_below="@+id/a1"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/custome_listview"
                android:backgroundTint="#E8E8E8"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_datlaimatkhau_tentaikhoan"
                    android:text="Nguyễn Khắc Quân"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_datlaimatkhau_emailtaikhoan"
                    android:layout_below="@+id/tv_datlaimatkhau_tentaikhoan"
                    android:text="quanjkl98@gmail.com"
                    android:textSize="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_datlaimatkhau_datlai"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/a2"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_18sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/background_button"
                android:backgroundTint="#1E1E1E"
                android:text="Đặt Lại Mật Khẩu" />

        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
