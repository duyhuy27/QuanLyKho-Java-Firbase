<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_khachang"
    android:background="#E8E8E8">

    <LinearLayout
        android:id="@+id/lsp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edt_timkiem_khachhang"
                android:background="@drawable/custome_listview"
                android:backgroundTint="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Tìm kiếm loại sản phẩm"
                android:paddingLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"/>
            <ImageButton
                android:id="@+id/img_timkiem_khachhang"
                android:src="@drawable/icon_tim_kiem"
                android:background="@drawable/custome_listview"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:backgroundTint="#E8E8E8"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:src="@drawable/logo"/>
        <RelativeLayout
            android:background="@drawable/custome_listview"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_loaisanpham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_themkhachhang"
                android:src="@drawable/icon_them"
                android:backgroundTint="#35C2C1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>