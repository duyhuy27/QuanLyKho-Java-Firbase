<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_khachang"
    android:background="#E8E8E8">


            <EditText
                android:id="@+id/edt_timkiem_khachhang"
                android:background="@drawable/custome_listview"
                android:backgroundTint="@color/white"
                android:layout_centerHorizontal="true"
                android:hint="Tìm kiếm tài khoản"
                android:padding="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"/>

            <ImageButton
                android:id="@+id/img_timkiem_khachhang"
                android:src="@drawable/icon_tim_kiem"
                android:background="@drawable/custome_listview"
                android:layout_alignParentRight="true"
                android:layout_toStartOf="@+id/edt_timkiem_khachhang"
                android:backgroundTint="#E8E8E8"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_20sdp"

                />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:src="@drawable/logo"/>



        <RelativeLayout
            android:background="@drawable/custome_listview"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_logo">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_loaisanpham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_themkhachhang"
                android:src="@drawable/icon_them"
                android:backgroundTint="#35C2C1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>






</RelativeLayout>