<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="340dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_dialog">

            <TextView
                android:id="@+id/desDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:text="Thêm thuộc tính"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />


            <EditText
                android:id="@+id/edt_ten_tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desDialog"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/background_button_02"
                android:drawablePadding="10dp"
                android:hint="Tên thuộc tính"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <EditText
                android:id="@+id/edt_giatri_tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_ten_tt"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/background_button_02"
                android:drawablePadding="10dp"
                android:hint="Giá trị thuộc tính"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_luuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_giatri_tt"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="Lưu ý : Chỉ nên nhập 1 giá trí của thuộc tính đẻ đạt hiệu quả quản lý cao nhất"
                android:textColor="@color/mau_do" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_luuy"
                android:layout_marginTop="@dimen/_14sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_thoat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="Thoát"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_them"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button"
                    android:text="Thêm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible" />


            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iconDialog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </RelativeLayout>


</RelativeLayout>