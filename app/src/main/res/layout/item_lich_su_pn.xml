<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp"
    app:contentPadding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_lichsupn_itemtennhanvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Tên nhân viên"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_lichsupn_itemtennhanvien"
            android:paddingLeft="@dimen/_3sdp"
            android:text="đã"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/tv_lichsupn_itemloaithongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/t1"
            android:paddingLeft="@dimen/_3sdp"
            android:text="aa"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lichsupn_itemtennhanvien"
            android:paddingLeft="@dimen/_10sdp"
            android:text="phiếu nhận "
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lichsupn_itemtennhanvien"
            android:layout_toEndOf="@id/t2"
            android:paddingLeft="@dimen/_3sdp"
            android:text="vào ngày"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/tv_lichsupn_itemngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:paddingLeft="@dimen/_10sdp"
            android:text="2023-10-10"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>