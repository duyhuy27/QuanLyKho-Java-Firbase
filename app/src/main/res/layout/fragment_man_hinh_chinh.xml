<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical"
    tools:context=".Fragment.ManHinhChinhFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/custome_listview"
        android:backgroundTint="@color/white"
        android:paddingTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/lsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:text="Xin Chào,"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ten_nguoi_dung_manhinhchinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lsp"
            android:text="Quân"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a2"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ten_nguoi_dung_manhinhchinh"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Bạn có khúc mắc?"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a3"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a2"
            android:layout_marginStart="@dimen/_14sdp"
            android:text="Hãy đặt câu hỏi cho đội ngũ phát triển?"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_guicauhoi_manhinhchinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a3"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/custome_listview"
            android:backgroundTint="#E8E8E8"
            android:hint="Câu hỏi?"
            android:padding="@dimen/_14sdp"
            android:paddingStart="@dimen/_10sdp" />

        <ImageButton
            android:id="@+id/imgbt_guicauhoi_manhinhchinh"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/a3"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_toEndOf="@+id/a2"
            android:background="@drawable/custome_listview"
            android:backgroundTint="#35C2C1"
            android:src="@drawable/baseline_send_24" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/custome_listview"
        android:backgroundTint="@color/white"
        android:paddingStart="@dimen/_10sdp"

        android:paddingTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Tính Năng Thử Nghiệm"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s1"
            android:gravity="center_horizontal"
            android:text="CHAT VỚI AI"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@+id/s2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_25sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_3sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_aii" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_manhinhchinh_chatai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s3"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_button"
            android:text="Dùng Thử"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>

</LinearLayout>